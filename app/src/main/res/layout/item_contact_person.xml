<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rightArrowIV"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_right_arrow_blue" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/callIV"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@id/rightArrowIV"
            android:background="@drawable/border_gray_round_corner"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_call" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/messageIV"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@id/callIV"
            android:background="@drawable/border_gray_round_corner"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toStartOf="@id/messageIV"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Font12Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joseph Amand"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Font12SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Sales manager"
                android:textColor="@color/text_color_blue" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_gray" />

</LinearLayout>